// SellerLoginScreen.java

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.HashMap;
import java.util.Map;

public class SellerLoginScreen {
    private static Map<String, String> sellerCredentials = new HashMap<>();

    public static void main(String[] args) {
        sellerCredentials.put("seller1", "password123");
        SwingUtilities.invokeLater(SellerLoginScreen::showLoginScreen);
    }

    public static void showLoginScreen() {
        JFrame loginFrame = new JFrame("Seller Login");
        loginFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        loginFrame.setSize(300, 200);

        JPanel panel = new JPanel(new GridLayout(3, 2));
        JTextField userField = new JTextField();
        JPasswordField passField = new JPasswordField();
        JButton loginButton = new JButton("Login");

        panel.add(new JLabel("Username:"));
        panel.add(userField);
        panel.add(new JLabel("Password:"));
        panel.add(passField);
        panel.add(loginButton);

        loginFrame.add(panel);
        loginFrame.setVisible(true);

        loginButton.addActionListener(e -> {
            String username = userField.getText();
            String password = new String(passField.getPassword());

            if (sellerCredentials.containsKey(username) && sellerCredentials.get(username).equals(password)) {
                loginFrame.dispose();
                SellerDashboard.showDashboard();
            } else {
                JOptionPane.showMessageDialog(loginFrame, "Invalid credentials!");
            }
        });
    }
}
